# FPL-UDPM-Catalog Environment Configuration
# Copy this file to .env and fill in the values

# ===== Database (MySQL) =====
MYSQL_ROOT_PASSWORD=your_secure_password
MYSQL_DATABASE=catalog_web

# ===== Backend =====
SERVER_PORT=9999
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_secure_password
SPRING_DATASOURCE_URL=jdbc:mysql://mysqldb:3306/catalog_web?useSSL=false&allowPublicKeyRetrieval=true

# JWT Configuration (Generate a strong secret: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_at_least_256_bits_long

# OAuth2 Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# CORS
ALLOWED_ORIGIN=http://localhost:6789
CORS_ALLOWED_ORIGINS=http://localhost:6789

# ===== Redis =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== Frontend =====
VITE_API_URL=http://localhost:9999
VITE_BASE_URL_CLIENT_SOCKET=http://localhost:9999

# ===== URLs =====
FRONTEND_URL=http://localhost:6789
BACKEND_URL=http://localhost:9999
